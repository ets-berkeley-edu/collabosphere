<%- include('../_shared/header') %>

<% var whiteboardLink = course.whiteboards_url + '?col_whiteboard=' + whiteboard.id -%>

<tr class="row activity-row">
  <td>
    <table cellpadding="0" cellspacing="0">
      <tbody>
        <tr>
          <td>

            <div class="activity-summary-container">
              <div class="wrapped">
                You have been invited by <%= inviter.canvas_full_name %> to collaborate on the whiteboard <a href="<%= whiteboardLink %>"><%= whiteboard.title %></a>.
              </div>
            </div>

            <table class="activity-previews-container" cellspacing="10" cellpadding="0">
              <tbody>
                <tr>

                  <%
                      var title = whiteboard.title;
                      if (title.length > 27) {
                        title = title.substring(0, 27) + '...';
                      }

                      var thumbnailSummary = whiteboard.members.length + ' collaborators';
                      var thumbnailUrl = '';
                      if (whiteboard.thumbnail_url) {
                          thumbnailUrl = whiteboard.thumbnail_url;
                      } else {
                          thumbnailUrl = baseCollabosphereUrl + resolveAsset('/assets/img/icon_whiteboard.png');
                      }
                  -%>

                  <td class="preview-tile-container" style="background-image: url('<%= thumbnailUrl %>');" background="<%= thumbnailUrl %>" valign="bottom">
                    <a href="<%= whiteboardLink %>" title="<%= title %>" target="_blank">
                      <table cellpadding="0" cellspacing="0" class="preview-tile-container-inner">
                        <tr>
                          <td valign="bottom">
                            <div class="preview-tile-metadata">
                              <table cellpadding="0" cellspacing="0" class="preview-tile-metadata-inner">
                                <tr valign="top">
                                  <td class="preview-tile-metadata-title">
                                    <a href="<%= whiteboardLink %>" target="_blank" class="preview-tile-title wrapped"><%= title %></a>
                                  </td>
                                </tr>
                                <tr>
                                  <td class="preview-tile-metadata-description"><%= thumbnailSummary %></td>
                                </tr>
                              </table>
                            </div>
                          </td>
                        </tr>
                      </table>
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="activity-comments-footer">
              <a href="<%= whiteboardLink %>">Check it out</a>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </td>
</tr>

<%- include('../_shared/footer') %>
